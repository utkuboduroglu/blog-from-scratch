{
  "server_properties": {
    "hostname": "127.0.0.1",
    "port": 8888
  },
  "public_serve_path": "./public/templates",
  "endpoints": [
    {
      "URI": "/",
      "request_type": "GET",
      "resource": "home.ejs",
      "resource_type": "EJS"
    },
    {
      "URI": "/post",
      "request_type": "GET",
      "resource": "post.ejs",
      "resource_type": "EJS"
    },
    {
      "URI": "/about",
      "request_type": "GET",
      "resource": "about.ejs",
      "resource_type": "EJS"
    },
    {
      "URI": "/404",
      "request_type": "GET",
      "resource": "404.html",
      "resource_type": "plain_html"
    }
  ],
  "static_serve_path": "./public/static",
  "blog_post_path": "./posts",
  "global_header_includes": [
    "dependency_header.html"
  ],
  "markdown_parse_options": {
    "latex_engine": "KaTeX",
    "footnotes": true,
    "render_tikz": true,
    "capture_preamble": [
      {
        "field_name": "title",
        "database_field_name": "post_title",
        "required": true
      },
      {
        "field_name": "date",
        "database_field_name": "post_specified_date",
        "required": true
      },
      {
        "field_name": "category",
        "database_field_name": "post_category",
        "required": false
      },
      {
        "field_name": "tags",
        "database_field_name": "post_tags_list",
        "required": false
      }
    ]
  },
  "sql_options": {
    "store_in_memory": true,
    "access_queries": {
        "metadata_insert": "INSERT INTO post_metadata (post_hash, filename, modification_date) VALUES (@id, @filename, @mod_date);",
        "metadata_retrieve": "SELECT * FROM post_metadata;",
        "retrieve_file_info": "SELECT * FROM post_metadata WHERE post_hash == ?",
        "retrieve_file_preamble": "SELECT * FROM post_preamble WHERE post_hash == ?"
    },
    "tables": [
      {
        "table_name": "post_metadata",
        "table_schema": [
          {
              "title": "post_hash",
              "type": "TEXT PRIMARY KEY"
          },
          {
              "title": "filename",
               "type": "TEXT UNIQUE"
          },
          {
              "title": "modification_date",
               "type": "DATE"
          }
        ]
      },
      {
        "table_name": "post_preamble",
        "table_schema": [
          {
              "title": "post_hash",
              "type": "TEXT PRIMARY KEY"
          },
          {
              "title": "post_title",
              "type": "TEXT REQUIRED"
          },
          {
              "title": "post_specified_date",
              "type": "DATE REQUIRED"
          },
          {
              "title": "post_category",
              "type": "TEXT"
          },
          {
              "title": "post_tags_list",
              "type": "TEXT"
          }
        ]
      },
      {
        "table_name": "post_blobs",
        "table_schema": [
          {
              "title": "post_hash",
              "type": "TEXT PRIMARY KEY"
          },
          {
              "title": "post_blob",
              "type": "BLOB REQUIRED"
          }
        ]
      }
    ]
  }
}
